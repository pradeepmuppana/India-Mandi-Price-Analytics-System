# ===== API KEYS =====
# Get from: https://data.gov.in → Register → My Account → API Key
DATA_GOV_API_KEY=your_data_gov_api_key_here

# Get from: https://api.ceda.ashoka.edu.in → Sign up
CEDA_API_KEY=your_ceda_api_key_here

# ===== SQL SERVER DATABASE CONNECTION =====
# Local SQL Server (for Week 5+ when you start dbt)
SQL_SERVER_HOST=localhost
SQL_SERVER_PORT=1433
SQL_SERVER_DATABASE=mandi_analytics
SQL_SERVER_DRIVER="ODBC Driver 17 for SQL Server"
SQL_SERVER_TRUSTED_CONNECTION=true

# ===== API SETTINGS =====
API_PAGE_SIZE=1000
API_MAX_RETRIES=3
API_RETRY_DELAY=5

# ===== APPLICATION SETTINGS =====
LOG_LEVEL=INFO
PROJECT_ENV=development
PROJECT_NAME=mandi-analytics